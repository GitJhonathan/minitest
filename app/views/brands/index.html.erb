<h1>All Brands Created</h1>

<% if @brands.exists? %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @brands.each do |brand| %>
        <tr>
          <td><%= brand.name %></td>
          <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
          <td><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% else %>
    <h3>You have no Brands added.</h3>
  <% end %>

<br>

<%= link_to 'Add New Brand', new_brand_path %>