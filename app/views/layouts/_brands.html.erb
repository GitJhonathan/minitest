<div class="row">
 <div class="col-md-12">
   <table class= "table table-striped table-hover custom-table-width">
      <thead>
        <tr>
          <th>Name</th>
          <th class="column-10"></th>
          <th class="column-10"></th>
        </tr>
      </thead>

      <tbody>
        <% @brands.each do |brand| %>
          <tr>
            <td><%= brand.name %></td>
            <td><%= link_to '<span class="glyphicon glyphicon-edit"></span>'.html_safe,
                    edit_brand_path(brand) %></td>
            <td><%= link_to '<span class="glyphicon glyphicon-remove"></span>'.html_safe,
                    brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>