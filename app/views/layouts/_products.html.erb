<div class="row">
  <div class="col-md-12">
   <div class="table-responsive">
      <table class= "table table-striped table-hover custom-table-width-p">
        <thead>
          <tr>
            <th>Name</th>
            <th>Brand</th>
            <th>Description</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr class="text-left">
              <td><%= product.name %></td>
              <td><%= product.brand.name %></td>
              <td><% if product.description.empty? %>
                  <em>No Description</em>
                  <% else %>
                  <%= product.description %>
                  <% end %>
              </td>
              <td>$<%= product.price %></td>
              <td><%= link_to '<span class="glyphicon glyphicon-edit"></span>'.html_safe,
                      edit_product_path(product) %></td>
              <td><%= link_to '<span class="glyphicon glyphicon-remove"></span>'.html_safe,
                      product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <br>
  </div>
</div>
<div class="row">
    <div class="col-md-12">
      <h2 class="bg-info custom-table-width-p">Total Value: $<%= @total_value %></h2>
    </div>
</div>

